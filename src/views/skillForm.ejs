<script>
  const frm2 = document.getElementById("form2");

  frm2.addEventListener("submit", async (e) => {

      e.preventDefault();
      const name = frm2.s1.value;

      console.log(name);

      console.log("with in from");
      const res = await fetch("http://localhost:3000/skills", {
           method: "post",
          body: JSON.stringify({

            name:name, 
          }),
          headers: { "Content-Type": "application/json" }
      })
      const server = await res.json()
      console.log(server.status)
      if (server.status === true) {
          location.assign("http://localhost:3000/skills")
      }
  })
</script>
